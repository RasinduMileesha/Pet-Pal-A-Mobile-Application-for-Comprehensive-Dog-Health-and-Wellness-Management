<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <!-- Outer shadow effect -->
        <shape android:shape="rectangle">
            <solid android:color="#e0e0e0" /> <!-- Shadow color -->
            <corners android:radius="20dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <!-- Button background -->
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#4CAF50"
            android:endColor="#388E3C"
            android:angle="270" />
            <corners android:radius="20dp" /> <!-- Rounded corners -->
            <stroke
                android:width="2dp"
                android:color="#1B5E20" /> <!-- Border color -->
        </shape>
    </item>
</layer-list>
